{
  "compilerOptions": {
    "outDir": "../dist/",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise"
    ]
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "/node_modules"
  ]
}